<?xml version="1.0" encoding="UTF-8"?>
<driver>
    <name lang="en">Generic PPtP Cable Modem</name>
    <comment lang="en">
        Generic cables modem that uses PPtP for communication.
    </comment>
    <type>cable</type>
    <interface type="usb"/>
    <interface type="ethernet"/>
    <module kernel="2.4">CDCEther</module>
    <module kernel="2.6">usbnet</module>
    <supported>
        <modem>Ambit</modem>
        <modem>Motorola SB4100/4200 SurfBoard Cable Modem</modem>
	    <modem>Motorola SB5100 SurfBoard Cable Modem</modem>
	    <modem>Joohong SuperLink 2800 Cable Modem</modem>
	    <modem>Terayon TJ715x</modem>
    </supported>
</driver>
