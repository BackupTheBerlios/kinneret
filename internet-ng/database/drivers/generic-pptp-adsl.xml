<?xml version="1.0" encoding="UTF-8"?>
<driver>
    <name lang="en">PPtP ADSL Modem</name>
    <type>adsl</type>
    <comment lang="en">
        Generic ethernet ADSL modem that uses PPtP for communication.
    </comment>
    <interface type="ethernet"/>
    <vpn protocol="pptp">
        <address>10.0.0.138</address>
        <remotename>10.0.0.138 RELAY_PPP1</remotename>
        <ethernet>
            <address>10.200.1.1</address>
            <netmask>255.0.0.0</netmask>
            <broadcast>255.255.255.255</broadcast>
        </ethernet>
    </vpn>
    <supported>
        <modem>Alcatel SpeedTouch Home</modem>
    </supported>
</driver>
